extends layout

block content
    .row
        .col.s12.m6
            .card
                .card-content.card-image
                    img(src=`${perso.images.md}`)
                    
                    p=`fullname : ${perso.biography.fullName}`
                    p=`name : ${perso.name}`
                    h5= "powerstats"
                    p=`intelligence : ${perso.powerstats.intelligence}`
                    p=`strength : ${perso.powerstats.strength}`
                    p=`speed : ${perso.powerstats.speed}`
                    p=`durability: ${perso.powerstats.durability}`
                    p=`combat : ${perso.powerstats.combat}`
                    p=`power : ${perso.powerstats.power}`
                    h5="appearance"
                    p=`gender : ${perso.appearance.gender}`
                    p=`race : ${perso.appearance.race}`
                    p=`height : ${perso.appearance.height[1]}`
                    p=`weight : ${perso.appearance.weight[1]}`
                    h5="biography"
                    p=`opponence : ${perso.biography.alterEgos}`
                    p=`aliases : ${perso.biography.aliases}`
                    p=`first appearance : ${perso.biography.firstAppearance}`
                    h5= `Work`
                    p=`occupation : ${perso.work.occupation}`